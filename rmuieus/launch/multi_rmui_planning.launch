<launch>
  <arg name="robot" default="pr2" />
  <arg name="main" default="true" />
  <arg name="box_type" default="ctb" />
  <arg name="n_box" default="3" />

  <arg names="rmui_names" value="(list \&quot;rmui0\&quot; \&quot;rmui1\&quot; \&quot;rmui2\&quot;)"
       if="$(eval arg('n_box') >= 3)" />
  <arg names="rmui_names" value="(list \&quot;rmui1\&quot; \&quot;rmui2\&quot;)"
       unless="$(eval arg('n_box') >= 3)" />

  <node pkg="rmuieus" type="$(arg robot)-rmui-planning.l" name="rmui_main"
        args="&quot;(main :rmui-names $(arg rmui_names)
                          :box-types :$(arg box_type))&quot;"
        if="$(arg main)" required="true" output="screen" />
</launch>
