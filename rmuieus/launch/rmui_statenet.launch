<launch>
  <arg name="robot" default="pr2" />
  <arg name="main" default="true" />
  <arg name="pdf" default="true" />

  <arg name="pdf-flag" value="t" if="$(arg pdf)" />
  <arg name="pdf-flag" value="nil" unless="$(arg pdf)" />

  <node pkg="rmuieus" name="statenet_server" type="$(arg robot)-statenet-server.l" if="$(arg main)"
        args="&quot;(main :pdf $(arg pdf-flag))&quot;" output="screen">
  </node>

  <node pkg="smach_viewer" name="smach_viewer" type="smach_viewer.py" />

</launch>
